{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Example Component Schema",
  "type": "object",
  "required": [
    "name",
    "description",
    "image"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the component"
    },
    "description": {
      "type": "string",
      "description": "Description of the component"
    },
    "image": {
      "type": "string",
      "description": "Docker image for the component"
    },
    "consumes": {
      "$ref": "#/definitions/subsets"
    },
    "produces": {
      "$ref": "#/definitions/subsets"
    },
    "args": {
      "$ref": "#/definitions/args"
    }
  },
  "definitions": {
    "subset": {
      "type": "object",
      "properties": {
        "fields": {
          "$ref": "common.json#/definitions/fields"
        },
        "additionalFields": {
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "fields"
      ]
    },
    "subsets": {
      "type": "object",
      "properties": {
        "additionalSubsets": {
          "type": "boolean",
          "default": true
        }
      },
      "minProperties": 1,
      "additionalProperties": {
        "$ref": "#/definitions/subset"
      }
    },
    "args": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "list",
              "str",
              "int",
              "float",
              "bool",
              "dict",
              "tuple",
              "set"
            ]
          },
          "description": {
            "type": "string"
          },
          "default": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "number"
              },
              {
                "type": "boolean"
              },
              {
                "type": "array"
              },
              {
                "type": "object"
              }
            ]
          }
        },
        "required": [
          "type"
        ]
      }
    }
  }
}
