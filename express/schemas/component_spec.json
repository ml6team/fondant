{
   "$schema":"http://json-schema.org/draft-07/schema#",
   "type":"object",
   "properties":{
      "name":{
         "type":"string"
      },
      "description":{
         "type":"string"
      },
      "inputs":{
         "type":"array",
         "items":{
            "type":"object",
            "properties":{
               "name":{
                  "type":"string"
               },
               "description":{
                  "type":"string"
               },
               "type":{
                  "type":"string"
               }
            },
            "required":[
               "name",
               "description",
               "type"
            ]
         }
      },
      "outputs":{
         "type":"array",
         "items":{
            "type":"object",
            "properties":{
               "name":{
                  "type":"string"
               },
               "description":{
                  "type":"string"
               }
            },
            "required":[
               "name",
               "description"
            ]
         }
      },
      "implementation":{
         "type":"object",
         "properties":{
            "container":{
               "type":"object",
               "properties":{
                  "image":{
                     "type":"string"
                  },
                  "command":{
                     "type":"array",
                     "items":{
                        "oneOf":[
                           {
                              "type":"string"
                           },
                           {
                              "type":"object",
                              "properties":{
                                 "inputPath":{
                                    "type":"string"
                                 },
                                 "inputValue":{
                                    "type":"string"
                                 },
                                 "outputPath":{
                                    "type":"string"
                                 }
                              }
                           }
                        ]
                     }
                  }
               }
            }
         }
      },
      "input_subsets":{
         "type":"object",
         "additionalProperties":{
            "type":"object",
            "properties":{
               "data":{
                  "type":"string"
               }
            }
         }
      },
      "output_subsets":{
         "type":"object",
         "additionalProperties":{
            "type":"object",
            "properties":{
               "data":{
                  "type":"string"
               }
            }
         }
      }
   },
   "required":[
      "name",
      "inputs",
      "outputs",
      "implementation"
   ]
}